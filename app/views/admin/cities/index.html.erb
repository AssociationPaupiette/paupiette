<% content_for :title, 'Villes' %>

<%= content_for :subtitle do %>
  <%= link_to 'Créer une ville', new_admin_city_path, class: 'btn btn-primary' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Ambassadeurs</th>
      <th scope="col">Convives</th>
      <th scope="col">Hôtes</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td>
          <%= link_to city, [:admin, city] %>
          <% if city.inactive? %><span class="badge badge-light">Ville non active</span><% end %>
        </td>
        <td>
          <% city.ambassadors.each do |user| %>
            <%= link_to user, [:admin, user] %>
          <% end %>
        </td>
        <td><%= city.guests.count %></td>
        <td><%= city.hosts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>