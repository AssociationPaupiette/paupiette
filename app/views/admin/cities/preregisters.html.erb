<%= content_for :title, @city %>

<h2><%= @preregisters.count %> préinscription<%= 's' if @preregisters.many? %></h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Prénom</th>
      <th scope="col">Ville</th>
    </tr>
  </thead>
  <tbody>
    <% @preregisters.each do |preregister| %>
      <tr>
        <td><%= preregister.email %></td>
        <td><%= preregister.first_name %></td>
        <td><%= preregister.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>CSV à copier coller</h2>
<textarea cols="100"><% @preregisters.each do |preregister| %>
<%= preregister.email %>;<%= preregister.first_name %>;<%= preregister.city %>
<% end %></textarea>