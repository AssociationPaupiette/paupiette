<%= content_for :title, @city %>

<h2><%= @preregistrations.count %> préinscription<%= 's' if @preregistrations.many? %></h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Prénom</th>
      <th scope="col">Ville</th>
    </tr>
  </thead>
  <tbody>
    <% @preregistrations.each do |preregistration| %>
      <tr>
        <td><%= preregistration.email %></td>
        <td><%= preregistration.first_name %></td>
        <td><%= preregistration.city %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>CSV à copier coller</h2>
<textarea cols="100"><% @preregistrations.each do |preregistration| %>
<%= preregistration.email %>;<%= preregistration.first_name %>;<%= preregistration.city %>
<% end %></textarea>