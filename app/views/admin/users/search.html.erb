<% content_for :title, 'Recherche' %>

<%= form_tag search_admin_users_path, class: 'form-inline', method: :get do %>
  <%= search_field_tag 'term', params[:term], placeholder: 'Email ou identifiant recherché', class: 'form-control' %>
  <%= submit_tag 'Chercher', class: 'btn btn-primary' %>
<% end %>

<% if @users.any? %>
  <h2>Résultats</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Ville</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, [:admin, user] %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.city %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>