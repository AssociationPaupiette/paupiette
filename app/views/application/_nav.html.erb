<nav class="navbar navbar-expand-md">
  <div class="container">
    <%= link_to image_tag('logo.svg', width: 200), root_path, class: 'navbar-brand' %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to t('menu.hosts'), hosts_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to t('menu.ambassadors'), ambassadors_path, class: 'nav-link' %></li>
        <% if current_user.nil? %>
          <li class="nav-item"><%= link_to t('menu.signin'), new_user_session_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t('menu.signup'), new_user_registration_path, class: 'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to t('menu.my.name'), my_root_path, class: 'nav-link' %></li>

          <li class="nav-item dropdown">
            <a  id="navbarDropdownMenuUser" 
