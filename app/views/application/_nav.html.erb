              <%= link_to t('menu.my.advices'), my_advices_path, class: 'dropdown-item' %>
              <%= link_to t('menu.my.meals'), my_meals_path, class: 'dropdown-item' %>
              -->
              <% if can? :manage, :city %>
                <%= link_to t('menu.my_cities.name'), my_cities_root_path, class: 'dropdown-item' %>
              <% end %>
              <% if can? :access, :admin %>
                <%= link_to t('menu.admin'), admin_root_path, class: 'dropdown-item' %>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to t('menu.signout'), destroy_user_session_path, class: 'dropdown-item' %>
            </div>
          </li>
        <% end %>
