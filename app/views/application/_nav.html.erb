                aria-expanded="false">
              <%= current_user %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuUser">
              <%= link_to t('menu.my.messages'), my_messages_path, class: 'dropdown-item' %>
              <%= link_to t('menu.my.profile'), my_profile_path, class: 'dropdown-item' %>
