<div class="col-md-3">
  <%= link_to user_path(user_slug: host.slug) do %>
    <article>
      <h2><%= link_to host.first_name, user_path(user_slug: host.slug) %></h2>
      <%= image_tag host.photo.variant(resize: '300x300^', combine_options: { gravity: 'center', crop: '300x300+0+0' }), class: 'img-fluid' if host.photo.attached? %>
      <p>Hôte à <%= host.city %> depuis <%= l host.created_at, format: "%B %Y" %></p>
      <p>Jours préférés</p>
      <ul>
        <% host.localized_reception_days.each do |day| %>
          <li><%= day %></li>
        <% end %>
      </ul>
      <p>"<%= host.description %>"</p>
      <h3>Mes spécialités</h3>
      <p><%= host.specialties %></p>
      <%= link_to 'Contacter', my_conversation_path(user_slug: host.slug), class: 'btn btn-primary' %>
    </article>
  <% end %>
</div>