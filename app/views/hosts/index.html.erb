<%= content_for :title, t('menu.hosts') %>

<div class="container">
  <div class="hote-city">
    <h1><span class="style-hote">Rencontrez</span> nos <%= t('menu.hosts') %></h1>
    <p>Choisissez votre ville&nbsp;:</p>
    <ul class="list-inline btn-city">
      <% @cities.each do |city| %>
      <li class="list-inline-item"><%= link_to city, city_hosts_path(city_slug: city.slug), class: 'btn btn-primary' %></li>
      <% end %>
    </ul>
  </div>
</div>

<section class="users__list">
  <div class="container">
    <% if @meals.any? %>
    <div class="title-hote">
      <div class="row">
        <div class="col-md-11 offset-md-1">
          <h2>Repas ouverts</h2>
        </div>
      </div>
      <div class="row">
        <%= render partial: 'meals/meal', collection: @meals %>
      </div>
    <% end %>
    
    <div class="title-hote">
      <div class="row">
        <div class="col-md-11 offset-md-1">
          <h2><span class="style-hote">Contactez</span> un h√¥te</h2>
        </div>
      </div>
    </div>
    <div id="users" class="row">
      <%= render partial: 'users/user', collection: @users %>
    </div>
    <% unless @users.empty? || @users.last_page? %>
      <div class="voir-plus">
      <%= link_to hosts_path(page: @users.current_page+1),
                  class: "btn btn-primary",
                  id: "load-more-users",
                  remote: true do %>
          Voir plus
          <i class="fas fa-angle-down"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</section>