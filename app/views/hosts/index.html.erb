<%= content_for :title, t('menu.hosts') %>

<div class="container">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h1><%= t('menu.hosts') %></h1>
      <p>Choisissez votre ville :</p>
      <ul class="list-inline">
        <% @cities.each do |city| %>
        <li class="list-inline-item"><%= link_to city, city_hosts_path(city_slug: city.slug), class: 'btn btn-primary' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<section class="users__list">
  <div class="container">

    <% if @meals.any? %>
      <div class="row">
        <div class="col-md-11 offset-md-1">
          <h2>Repas ouverts</h2>
        </div>
      </div>
      <div class="row">
        <%= render partial: 'meals/meal', collection: @meals %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-11 offset-md-1">
        <h2>Contactez un h√¥te</h2>
      </div>
    </div>
    <div class="row" id="users">
      <%= render partial: 'users/user', collection: @users %>
    </div>
    <% unless @users.empty? || @users.last_page? %>
      <br/>
      <%= link_to 'Voir plus', 
                  hosts_path(page: @users.current_page+1),
                  class: "btn btn-primary",
                  id: "load-more-users",
                  remote: true %>
    <% end %>
  </div>
</section>