<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= yield :title %> | Paupiette</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <%= render 'nav' %>
    <main>
      <div class="container-fluid">
        <ol class="breadcrumb">
          <%= render_breadcrumbs tag: :li, separator: '&nbsp;/&nbsp;' %>
        </ol>
        <%= render 'flash' %>
        <%= yield %>
      </div>
    </main>
    <%= render 'footer' %>
  </body>
</html>