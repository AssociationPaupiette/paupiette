<%= simple_form_for [:my, @meal], 
                    wrapper: :horizontal_form,
                    wrapper_mappings: {
                      date: :horizontal_multi_select,
                      datetime: :horizontal_multi_select } do |f| %>
  <%= f.input   :date,
                html5: true,
                as: :date,
                label: 'Date',
                input_html: { min: Date.tomorrow } %>
  <%= f.input   :capacity,
                label: 'Nombre de convives' %>
  <%= f.input   :confirmed,
                label: 'Nombre de convives confirmÃ©s' %>
  <%= f.input   :formula,
                label: 'Formule',
                collection: Meal.formulas.map { |key, value| [t("formulas.#{key}"), key]},
                include_blank: false %>
  <%= f.input   :description %>
  <%= f.button  :submit,
                'Valider',
                class: 'btn-default' %>
<% end %>
