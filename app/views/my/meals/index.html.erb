<%= content_for :title, t('my.meals.name') %>

<div class="container">
  <%= render 'my/nav' %>
  <h2><%= t('my.meals.name') %></h2>

  <%= link_to 'Proposer un repas', new_my_meal_path, class: 'btn btn-primary' %>

  <div class="row">
    <% @meals.each do |meal| %>
      <div class="col-md-3">
        <div class="card">
          <h3><%= l meal.date, format: :long unless meal.date.nil?%></h3>
          <p><%= meal.capacity %> convive<%= 's' if meal.capacity > 1 %></p>
          <%= link_to 'Modifier', edit_my_meal_path(meal), class: 'btn btn-primary' %>
          <%= link_to 'Annuler ce repas', 
                      my_meal_path(meal), 
                      method: :delete, 
                      data: { confirm: 'Attention, l\'annulation est dÃ©finitive' }, 
                      class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>