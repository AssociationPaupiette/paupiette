<%= content_for :title, t('menu.my_cities.name') %>

<div class="container">
  <h1><%= t('menu.my_cities.name') %></h1>

  <% if @cities.none? %>
    <p>Pas de ville gérée.</p>
  <% end %>

  <% @cities.each do |city| %>
    <h2><%= city %></h2>
    <div class="row">

      <div class="col-md-3">
        <h1><%= city.users.guests.count %></h1>
        <p>Convives</p>
        <%= link_to 'Voir la liste', my_cities_users_guests_path(city_slug: city.slug), class: 'btn btn-primary' %>
      </div>

      <div class="col-md-3">
        <h1><%= city.users.hosts.count %></h1>
        <p>Hôtes</p>
        <%= link_to 'Voir la liste', my_cities_users_hosts_path(city_slug: city.slug), class: 'btn btn-primary' %>
      </div>

      <div class="col-md-3">
        <h1><%= city.users.to_approve.count %></h1>
        <p><%= t 'menu.my_cities.users_to_approve' %></p>
        <%= link_to 'Voir la liste', my_cities_users_approval_path(city_slug: city.slug), class: 'btn btn-primary' %>
      </div>

      <div class="col-md-3">
        <h1><%= city.conversations.count %></h1>
        <p>Conversations</p>
      </div>

      <!--
      <div class="col-md-3">
        <h1>1</h1>
        <p>avis à valider</p>
        <%= link_to 'Valider', '', class: 'btn btn-primary' %>
      </div>
      -->

      <!--
      <div class="col-md-3">
        <h1>1</h1>
        <p>repas ouvert</p>
      </div>
      -->
    </div>
  <% end %>
</div>