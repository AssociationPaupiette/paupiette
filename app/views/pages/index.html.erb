      <div>
        <%= image_tag "meal-1.png", class: 'img-fluid', width: '359', height: '387' %>
      </div>
      <p>Plat</p>
    </div>
    <div class="col-md-4 text-center">
      <div>
        <%= image_tag "meal-2.png", class: 'img-fluid', width: '442', height: '472' %>
      </div>
      <p>Entrée + Plat <br> <span> ou </span> Plat + Dessert </p>
    </div>
    <div class="col-md-4 text-center">
      <div>
        <%= image_tag "meal-3.png", class: 'img-fluid', width: '431', height: '460' %>
      </div>
      <p>Entrée + Plat <br> + Dessert </p>
    </div>
  </div>
</section>

