<div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-xs-12">
  <%= link_to user_path(user_slug: user.slug) do %>
  <div class="card mb-4">
    <div class="div-img-hote">
     <% if user.photo.attached? %>
        <%= image_tag user.photo.variant(resize: '300x300^', combine_options: { gravity: 'center', crop: '300x300+0+0' }), class: 'img-fluid img-hote' %>
      <% else %>
        <%= image_tag 'avatar.png', class: 'img-fluid img-hote' %>
      <% end %>
    </div>
    <div class="name-hote"><h2><%= user.to_short_s %></h2></div>
    <div class="card-body">
      <div class="region">   
        <p>
          <% if user.ambassador? %>
          Ambassadeur
          <% elsif user.host? %>
          Hôte
          <% else %>
          Convive
          <% end %>
          à <%= user.city %> depuis <%= l user.created_at, format: "%B %Y" %>
        </p>
      </div>
      <div class="desc-hote">
        <p><%= simple_format user.description %></p>
      </div>
      <div class="jours-pref">
        <% if user.localized_reception_days.any? %>
        <h3>Jours préférés</h3>
        <ul>
          <% user.localized_reception_days.each do |day| %>
          <li><%= day %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <div class="specialties">
        <% unless user.specialties.blank? %>
        <h3>Mes spécialités</h3>
        <p><%= user.specialties %></p>
        <% end %>
      </div>
      <%= link_to 'Contacter', my_conversation_path(user_slug: user.slug), class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>