<div class="card-user col-md-4 col-sm-6">
  <%= link_to user_path(user_slug: user.slug) do %>
  <div class="card mb-4">
    <div class="row">
      <div class="div-img-hote col-5">
        <% if user.photo.attached? %>
        <%= image_tag user.photo.variant(resize: '300x300^', combine_options: { gravity: 'center', crop: '300x300+0+0' }), class: 'img-fluid img-hote' %>
        <% else %>
        <%= image_tag 'avatar.png', class: 'img-fluid img-hote' %>
        <% end %>
      </div>
      <div class="name-hote col-7 pr-0 pl-2">
        <h2><%= user.to_short_s %></h2>
        <p>X repas</p>
        <hr>
      </div>
      <i class="far fa-user-circle"></i>
    </div>
    <div class="card-body">
      <p>
        <% if user.ambassador? %>
        Ambassadeur
        <% elsif user.host? %>
        Hôte
        <% else %>
        Convive
        <% end %>
        à <%= user.city %> depuis <%= l user.created_at, format: "%B %Y" %>
      </p>

      <% if user.localized_reception_days.any? %>
        <p>Jours préférés · <span class="style-txt-hote"><%= user.localized_reception_days.join(' / ') %></span></p>
      <% end %>

      <% if user.meals.any? %>
        <p><span class="style-txt-hote"><%= user.meals.count %> repas</span> déjà organisés</p>
      <% end %>

      <div class="desc-hote">
        <%= simple_format user.description %>
      </div>

      <div class="specialties">
        <% unless user.specialties.blank? %>
        <p>Mes spécialités<br/>
        <span class="style-txt-hote"><%= user.specialties %></span></p>
        <% end %>
      </div>
      <div class="btn-hote">
      <%= link_to 'Contacter', my_conversation_path(user_slug: user.slug), class: 'btn btn-default btn-block' %>
    </div>
    </div>
  </div>
  <% end %>
</div>