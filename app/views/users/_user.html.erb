<div class="col-md-3">
  <%= link_to user_path(user_slug: user.slug) do %>
    <article class="user">
      <h2><%= link_to user.first_name, user_path(user_slug: user.slug) %></h2>
      <%= image_tag user.photo.variant(resize: '300x300^', combine_options: { gravity: 'center', crop: '300x300+0+0' }), class: 'img-fluid' if user.photo.attached? %>
      <p>
        <% if user.ambassador? %>
          Ambassadeur
        <% elsif user.host? %>
          Hôte
        <% else %>
          Convive
        <% end %>
        à <%= user.city %> depuis <%= l user.created_at, format: "%B %Y" %></p>
      <p>Jours préférés</p>
      <ul>
        <% user.localized_reception_days.each do |day| %>
          <li><%= day %></li>
        <% end %>
      </ul>
      <p>"<%= user.description %>"</p>
      <h3>Mes spécialités</h3>
      <p><%= user.specialties %></p>
      <%= link_to 'Contacter', my_conversation_path(user_slug: user.slug), class: 'btn btn-primary' %>
    </article>
  <% end %>
</div>